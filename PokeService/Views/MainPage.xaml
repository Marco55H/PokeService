<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PokeService.ViewModels"
             x:Class="PokeService.Views.MainPage">

    <ContentPage.BindingContext>
        <vm:PokemonsVM></vm:PokemonsVM>
    </ContentPage.BindingContext>

    <Grid>
        <ScrollView>

            <ListView ItemsSource="{Binding Pokemons}">
            
                <ListView.Header >
                
                    <StackLayout Orientation="Horizontal" Padding="10" BackgroundColor="SeaGreen">
                    
                        <Label Text="Nombre" FontSize="20" FontAttributes="Bold" HorizontalOptions="FillAndExpand"/>
                    
                    </StackLayout>
                
                </ListView.Header>

                <ListView.ItemTemplate>
                    
                    <DataTemplate>
                    
                        <ViewCell>
                        
                            <StackLayout Orientation="Horizontal" Padding="10" HorizontalOptions="FillAndExpand">
                            
                                <Label Text="{Binding Name}" FontSize="20" HorizontalOptions="FillAndExpand"/>
                            
                            </StackLayout>

                        </ViewCell>

                    </DataTemplate>


                </ListView.ItemTemplate>
            </ListView>
        

        </ScrollView>

        <Button
            Command="{Binding CmdPedirPokemons}"
            CornerRadius="30"
            WidthRequest="60"
            HeightRequest="60"
            Margin="20"
        />
    </Grid>
</ContentPage>
