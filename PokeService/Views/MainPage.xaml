<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PokeService.ViewModels"
             x:Class="PokeService.Views.MainPage">

    <ContentPage.BindingContext>
        <vm:PokemonsVM />
    </ContentPage.BindingContext>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ScrollView Padding="10" Grid.Column="0">
            <!-- ListView para mostrar los Pokémon -->
            <CollectionView ItemsSource="{Binding Pokemons}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="5" Orientation="Horizontal">
                            <Label Text="{Binding Name}" 
                                   FontSize="16" 
                                   VerticalOptions="Center" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView> 
        
        <!-- Botón para cargar más Pokémon -->
        <Button Text="Cargar Pokémon"
                Grid.Column="1"
                Command="{Binding CmdPedirPokemons}"/>
    </Grid>
</ContentPage>
